<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learnforward.edgelearner">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.learnforward.edgelearner.utils.ApplicationHelper"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_appicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.learnforward.edgelearner.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.learnforward.edgelearner.SplashscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.learnforward.edgelearner.ScannerActivity" />
        <activity android:name="com.learnforward.edgelearner.BookDownloadActivity" />
        <activity
            android:name="com.learnforward.edgelearner.BookReaderActivity"
            android:hardwareAccelerated="true" />
        <activity android:name="com.learnforward.edgelearner.ChaptersActivity" />
        <activity android:name="com.learnforward.edgelearner.AboutActivity" />
        <activity android:name="com.learnforward.edgelearner.ContactUsActivity" />
        <activity android:name="com.learnforward.edgelearner.DropTestActivity" />
        <activity android:name="com.learnforward.edgelearner.BookViewActivity"></activity>
    </application>

</manifest>