<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/libraryicon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/library"/>
        <TextView
            android:layout_toRightOf="@+id/libraryicon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="My Library"/>
        <LinearLayout
            android:id="@+id/scan"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quicklayout"
            android:layout_toLeftOf="@id/scan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp">
            <ImageButton
                android:id="@+id/contactus"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_contactus"/>
            <ImageButton
                android:id="@+id/aboutus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_aboutus"                 />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_below="@+id/topBar"
        android:layout_above="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d3d3d3d3"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/download_items_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:id="@+id/bottomBar"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/banner"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_toRightOf="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="right"
            android:text="@string/copy"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </RelativeLayout>

</RelativeLayout>